
@model IEnumerable<PriceTracker.Models.Product>

@{ 
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="NewProduct" class="btn btn-outline-success btn-sm">New Product</a>
</p>

<table class="table table-hover table-sm">
    <thead>       
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductLink)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Productname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductLink)
            </td>
            <td>
               
                <a asp-controller="Product" asp-action="UpdateProduct" asp-route-productId="@item.ProductId" >Edit</a>
                <a asp-controller="Product" asp-action="DetailProduct" asp-route-productId="@item.ProductId" >Details</a>
                <form asp-controller="Product" asp-action="DeleteProduct" asp-route-productId="@item.ProductId">
                    <button type="submit" value="Delete" >Delete</button>
                </form>
            </td>
        </tr>
            }
    </tbody>
</table>